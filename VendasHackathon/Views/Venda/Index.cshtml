@model IEnumerable<VendasHackathon.Models.VendaModel>

@{
    ViewData["Title"] = "Lista de Vendas";
}

<div>
    <h1>Lista de vendas</h1>
    <a class="btn btn-primary" asp-controller="Venda" asp-action="Create">Registrar venda</a>
</div>

<div class="table-responsive">
    <table id="tabela-formatada" class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Cliente Associado</th>
                <th scope="col">Data da Venda</th>
                <th scope="col">Total</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null) {
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Cliente.Nome</td>
                    <td>@Html.DisplayFor(model => item.DataVenda)</td>
                    <td>@item.ItemsVenda.Sum(x => x.Quantidade)</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Cliente" asp-route-id="@item.Id" asp-action="Update" role="button">Editar</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>