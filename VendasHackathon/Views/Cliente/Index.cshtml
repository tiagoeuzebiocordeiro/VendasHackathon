@model IEnumerable<VendasHackathon.Models.ClienteModel>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">Data de Nascimento</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Cpf</td>
                    <td>@Html.DisplayFor(model => item.DataNascimento)</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Cliente" asp-route-id="@item.Id" asp-action="Update" role="button">Editar</a>
                        <a class="btn btn-primary" href="#" role="button">Inativar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>