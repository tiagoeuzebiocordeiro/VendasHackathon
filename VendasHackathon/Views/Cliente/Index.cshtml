@model IEnumerable<VendasHackathon.Models.ClienteModel>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div>
    <h1>Lista de clientes</h1>
    <a class="btn btn-primary" asp-controller="Cliente" asp-action="Create">Cadastrar cliente</a>
</div>

<div class="table-responsive">
    <table id="tabela-formatada" class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">Data de Nascimento</th>
                <th scope="col">Situação</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Cpf</td>
                    <td>@Html.DisplayFor(model => item.DataNascimento)</td>
                    <td>
                       @(item.Ativo ? "Ativo" : "Inativo")
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Cliente" asp-route-id="@item.Id" asp-action="Update" role="button">Editar</a>
                        @* <a class="btn btn-danger" role="button" asp-route-id="@item.Id" asp-action="InativaCliente" asp-controller="Cliente">Inativar</a> *@
                        <a class="btn @(item.Ativo ? "btn-danger" : "btn-success")" role="button" asp-route-id="@item.Id" asp-route-ativo="@item.Ativo" asp-action="InativaCliente" asp-controller="Cliente">
                            @(item.Ativo ? "Desativar" : "Ativar")
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>